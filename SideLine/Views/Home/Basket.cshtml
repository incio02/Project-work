
@{
    ViewBag.Title = "Basket";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<h2>Basket</h2>

<table cellspacing="30" cellpadding="10">
    <tr>
        <td>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/Contents/imagesBasket/SerieA.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Lega Basket Serie A </h5>
                    <p class="card-text">Classifica</p>
                    <a href="@SideLine.Helpers.PathHelper.GetProdottoUrlBasket(11)" class="btn btn-success">Clicca qui</a>
                </div>
            </div>
        </td>
        <td>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/Contents/imagesBasket/Eurolega.png" alt="Card image cap" height="285" width="200"   >
                <div class="card-body">
                    <h5 class="card-title">Eurolega</h5>
                    <p class="card-text">Classifica</p>
                    <a href="@SideLine.Helpers.PathHelper.GetProdottoUrlBasket(12)" class="btn btn-success">Clicca qui</a>
                </div>
            </div>
        </td>
        <td>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/Contents/imagesBasket/Nba.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">NBA</h5>
                    <p class="card-text">Classifica</p>
                    <a href="@SideLine.Helpers.PathHelper.GetProdottoUrlBasket(13)" class="btn btn-success">Clicca qui</a>
                </div>
            </div>
        </td>
    </tr>
</table>




